@model dynamic

@{
    ViewBag.Title = "Protein Tracker";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Protein Tracker</h2>
<p>User: @Html.ActionLink((string)ViewBag.Name,"Edit", "Users", new { userId = ViewBag.Id}, null ) </p>
@using (Html.BeginForm("Index", "Tracker", FormMethod.Post))
{
    <p>Amount:</p>
    <input type="text" name="amount"/>
    <input type="submit" name="Enter"/>
    <input type="hidden" name="userId" value="@ViewBag.Id"/>
}
<p>Total: @ViewBag.Total</p>
<p>Goal: @ViewBag.Goal</p>